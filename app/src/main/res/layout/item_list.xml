<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/relative_reycle"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageSports"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvNamaSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@+id/imageSports"
                android:text="Nama orang"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDeskripsiSports"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/tvNamaSports"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/imageSports"
                android:text="Diskripsi"
                android:textSize="15dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>